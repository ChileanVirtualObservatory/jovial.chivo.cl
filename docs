#Se crean el namespace, serviceaccount, role y rolebindings para la autenticacion de jovial

kubectl create -f ~/kube-files/jovial/jovial-settings.yaml #SOLO UNA VEZ (LUL)

#Se obtiene el <token> (secret) de autenticacion del serviceaccount creado

kubectl -n jovial describe serviceaccount jovial
kubectl -n jovial describe secret jovial-token-<xxxx> #En el output se encuentra el <token>

#En el nodo de jovial se crea el usuario jovial con su token para la autenticacion del api

kubectl config set-credentials jovial-api-user --token="<token>"
kubectl config set-context jovial@kubernetes --cluster=kubernetes --user=jovial-api-user

#Aplicamos la nueva configuracion

kubectl config use-context jovial@kubernetes

#Borrar los tokens y certificados de kubernetes-admin@kubernetes en el config de la maquina de jovial!!!
